    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="../filesStatic/index.css">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
</head>

<body>
    <div class="container-fluid d-flex justify-content-center align-items-center">
        <a href="emergency.pug" class="d-flex justify-content-center align-items-center">
            <button class="btn btn-danger rotating-vibrating-element" style="position: fixed; top: 11em;z-index:9999;">
                <span class="material-symbols-outlined fw-light" style="vertical-align: middle; font-size: 24px;">crisis_alert</span>
                <span class="fw-light" style="vertical-align: middle; font-size: 20px;">Emergency!</span>
            </button>
        </a>
    </div>

    <!-- this is our nav bar -->
    <nav class="navbar fixed-top bg-body-secondary shadow p-3 bg-body-tertiary rounded sticky-top">
        <div class="container-fluid ">
            <a class="navbar-brand fs-3 fw-light" href="/">
                <img src="../imagesStatic/Emb.png" alt="Logo" width="35px" class="d-inline-block align-text-center">
                <span class="fs-3 fw-light">National Disaster Responsive Force</span>
            </a>
            <form class="d-flex" role="search">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success" type="search">Search</button>

                <!-- //displaying the chat or unread chat button on condition echo '<button type="button" class="btn btn-primary mx-3 custom-btn2 "> <span class="material-symbols-outlined" style="font-size:24px"> chat </span> </button> -->
                <button type="button" class="btn btn-primary mx-3 custom-btndanger jumping-button">
                    <span class="material-symbols-outlined" style="font-size:24px"> mark_unread_chat_alt </span>
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"> 2+</span>
                    <span class="visually-hidden">unread messages</span>
                </button>
                <a href="profile.pug">
                    <button type="button" class="btn btn-outline-dark custom-btn">
                        <span class="material-symbols-outlined" style="font-size: 24px;">group</span>
                    </button>
                </a>
            </form>
        </div>

    </nav>

    <!-- for displaying the Send alert  -->
    <div class="container-fluid d-flex justify-content-end px-5 align-items-center">
        <a href="sendalert.pug" class="d-flex justify-content-end align-items-center">
            <button class="btn btn-danger" style="position: fixed;z-index:9999;top: 14em;">
                <span class="material-symbols-outlined fw-light" style="vertical-align: middle; font-size: 24px;"> cell_tower </span>
                <span class="fw-light" style="vertical-align: middle; font-size: 20px;">Send Alert
                <span class="material-symbols-outlined shake-animation fw-light" style="vertical-align: middle; font-size: 24px;"> arrow_forward_ios </span>
            </button>
        </a>
    </div>


    <!-- <p id="location">Loading...</p> -->

    <!-- map is being displayed by this div -->
    <div id="map" style="width: 100%;"></div>

    <script src="../filesStatic/index.js"></script>

    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>


